{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist/src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "ES2017.object"],
    "useDefineForClassFields": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
